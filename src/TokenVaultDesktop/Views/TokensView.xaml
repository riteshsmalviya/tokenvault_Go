<UserControl x:Class="TokenVaultDesktop.Views.TokensView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:TokenVaultDesktop.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:TokensViewModel}"
             Background="#F5F5F5">
    
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Stored Tokens" Style="{StaticResource HeadingStyle}"/>
            <TextBlock Text="View and manage authentication tokens received from your backend applications."
                       Style="{StaticResource SubheadingStyle}"/>
        </StackPanel>
        
        <!-- Search/Filter Bar -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,24" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0"
                         Text="{Binding SearchFilter, UpdateSourceTrigger=PropertyChanged, Delay=300}">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource InputTextBoxStyle}">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="ðŸ” Search tokens..." 
                                                               Foreground="#999999"
                                                               Margin="10,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <Button Grid.Column="2"
                        Content="â†» Refresh"
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Padding="16,8"/>
            </Grid>
        </Border>
        
        <!-- Tokens List -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <Grid>
                <!-- Loading Indicator -->
                <TextBlock Text="Loading..."
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
                
                <!-- Tokens List -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding HasTokens, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ItemsControl ItemsSource="{Binding Tokens}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FAFAFA" 
                                        CornerRadius="8" 
                                        Padding="16" 
                                        Margin="0,0,0,12"
                                        BorderBrush="#E8E8E8"
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <!-- Project Name & Status -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <TextBlock Text="{Binding ProjectName}"
                                                           FontSize="16"
                                                           FontWeight="SemiBold"
                                                           Foreground="#1A1A2E"/>
                                                <Border Background="{Binding IsExpired, Converter={StaticResource BoolToVisibilityConverter}}"
                                                        CornerRadius="4"
                                                        Padding="8,2"
                                                        Margin="12,0,0,0"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding StatusText}"
                                                               FontSize="11"
                                                               Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                            
                                            <!-- Token Preview -->
                                            <Border Background="#F0F0F0" 
                                                    CornerRadius="4" 
                                                    Padding="12,8"
                                                    Margin="0,0,0,8">
                                                <TextBlock Text="{Binding MaskedValue}"
                                                           FontFamily="Consolas"
                                                           FontSize="13"
                                                           Foreground="#666666"/>
                                            </Border>
                                            
                                            <!-- Metadata -->
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding TokenType}"
                                                           FontSize="12"
                                                           Foreground="#888888"/>
                                                <TextBlock Text=" â€¢ "
                                                           FontSize="12"
                                                           Foreground="#CCCCCC"/>
                                                <TextBlock Text="{Binding TimeAgo}"
                                                           FontSize="12"
                                                           Foreground="#888888"/>
                                                <TextBlock Text=" â€¢ "
                                                           FontSize="12"
                                                           Foreground="#CCCCCC"/>
                                                <TextBlock Text="{Binding UpdatedAtDisplay}"
                                                           FontSize="12"
                                                           Foreground="#AAAAAA"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <!-- Actions -->
                                        <StackPanel Grid.Column="1" 
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <Button Content="ðŸ“‹ Copy"
                                                    Command="{Binding DataContext.CopyTokenCommand, 
                                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Padding="12,8"
                                                    Margin="0,0,8,0"/>
                                            
                                            <Button Content="ðŸ—‘ï¸"
                                                    Command="{Binding DataContext.DeleteTokenCommand, 
                                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource IconButtonStyle}"
                                                    FontSize="16"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Empty State -->
                <Border Background="#FAFAFA"
                        CornerRadius="8"
                        Padding="48"
                        Visibility="{Binding HasTokens, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ”‘"
                                   FontSize="64"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,24"/>
                        <TextBlock Text="No tokens stored"
                                   FontSize="18"
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Tokens will appear here when your backend apps send them to TokenVault"
                                   FontSize="13"
                                   Foreground="#999999"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,24"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   MaxWidth="400"/>
                        
                        <!-- Integration Example -->
                        <Border Background="#F5F5F5" 
                                CornerRadius="8" 
                                Padding="16"
                                MaxWidth="500">
                            <StackPanel>
                                <TextBlock Text="Send tokens to TokenVault:"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#666666"
                                           Margin="0,0,0,8"/>
                                <TextBlock FontFamily="Consolas"
                                           FontSize="11"
                                           Foreground="#333333"
                                           TextWrapping="Wrap">
                                    POST http://localhost:9999/store
                                    <LineBreak/>
                                    { "project": "my-app", "token": "eyJhbGc..." }
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
