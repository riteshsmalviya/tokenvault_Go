<UserControl x:Class="TokenVaultDesktop.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:TokenVaultDesktop.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:SettingsViewModel}"
             Background="#F5F5F5">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32">
        <StackPanel MaxWidth="600">
            
            <!-- Header -->
            <TextBlock Text="Settings" Style="{StaticResource HeadingStyle}"/>
            <TextBlock Text="Configure TokenVault Desktop preferences."
                       Style="{StaticResource SubheadingStyle}"/>
            
            <!-- Server Settings -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Server Configuration" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>
                    
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="HTTP Server Port"
                                   VerticalAlignment="Center"
                                   Foreground="#333333"/>
                        
                        <TextBox Grid.Column="1"
                                 Text="{Binding ServerPort, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Width="120"
                                 HorizontalAlignment="Left"/>
                    </Grid>
                    
                    <TextBlock Text="The port that backend applications use to send tokens. Default: 9999"
                               FontSize="12"
                               Foreground="#888888"
                               Margin="0,0,0,16"
                               TextWrapping="Wrap"/>
                    
                    <CheckBox Content="Auto-start server when application launches"
                              IsChecked="{Binding AutoStartServer}"
                              Margin="0,0,0,8"/>
                </StackPanel>
            </Border>
            
            <!-- Application Settings -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Application Behavior" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>
                    
                    <CheckBox Content="Minimize to system tray instead of closing"
                              IsChecked="{Binding MinimizeToTray}"
                              Margin="0,0,0,12"/>
                    
                    <CheckBox Content="Start TokenVault when Windows starts"
                              IsChecked="{Binding StartWithWindows}"
                              Margin="0,0,0,8"/>
                    
                    <TextBlock Text="When enabled, TokenVault will launch automatically at Windows startup."
                               FontSize="12"
                               Foreground="#888888"
                               Margin="24,0,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Database Info -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Database" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>
                    
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="Location:"
                                   Foreground="#666666"/>
                        
                        <TextBlock Grid.Column="1"
                                   Text="{Binding DatabasePath}"
                                   Foreground="#333333"
                                   TextTrimming="CharacterEllipsis"
                                   ToolTip="{Binding DatabasePath}"/>
                    </Grid>
                    
                    <Button Content="ðŸ“‚ Open Database Folder"
                            Command="{Binding OpenDatabaseFolderCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            HorizontalAlignment="Left"
                            Padding="12,8"/>
                </StackPanel>
            </Border>
            
            <!-- About -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="About" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Version:"
                                   Foreground="#666666"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding AppVersion}"
                                   FontWeight="SemiBold"/>
                        
                        <TextBlock Grid.Row="1"
                                   Text="Framework:"
                                   Foreground="#666666"
                                   Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   Text=".NET 8.0 / WPF"
                                   Margin="0,8,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Save Button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="ðŸ’¾ Save Settings"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        IsEnabled="{Binding IsDirty}"
                        Margin="0,0,16,0"/>
                
                <Button Content="â†» Reset"
                        Command="{Binding ResetCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
            
            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0"
                       FontSize="13"/>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
